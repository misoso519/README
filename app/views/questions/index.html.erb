<h1>Questions</h1>

<% @questions.each do |question| %>
  <div class="question">
    <h2><%= link_to question.title, question_path(question) %></h2>
    <p><%= question.body.truncate(150) %></p> <!-- 質問の内容を150文字で省略 -->
    <p>Category: <%= question.category&.name %></p>
    <p><%= time_ago_in_words(question.created_at) %> ago</p>
  </div>
<% end %>

<%= link_to 'Ask a question', new_question_path, class: 'btn btn-primary' %>
